@model Project_63130599.Models.KhachHang

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
          integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Thanh Toán | Thông Tin Giao Hàng</title>
</head>

<body>
    <!-- /checkout-step1 -->
    <div class="flex pl-12 gap-8">
        <!-- Check info -->
        <div class="w-2/3 pl-[10vw] py-[60px]">
            <h2 class="text-[28px]">KITSTORE Việt Nam</h2>
            <!-- path -->
            <div class="text-[12px] my-3">
                <a href="/giohang_63130599" class="text-blue-600">Giỏ hàng</a> <i class="fa-solid fa-angle-right"></i>
                <a href="#">Thông tin giao hàng</a> <i class="fa-solid fa-angle-right"></i> <a class="text-gray-500" href="checkouts-step2.html">
                    Phương
                    thức
                    thanh
                    toán
                </a>
            </div>
            <h3 class="text-[20px]">Thông tin giao hàng</h3>
            <div class="flex items-center gap-4 my-3">
                <img class="w-[50px] h-[50px] rounded-[12px]"
                     src="data:image/png;base64,"
                     alt="">
                <div class="">
                    <p class="text-[14px] text-gray-500">
                        @Model.Ho @Model.Ten
                        (@Model.TaiKhoan)
                    </p>
                    <a href="/home_63130599/logout" class="text-blue-600">Đăng xuất</a>
                </div>
            </div>
            <form action="/thanhtoan_63130599/buoc2" class="flex flex-col gap-3">
                <select class="border p-2 rounded-[8px] outline-blue-600"
                        name="" id="" aria-placeholder="Thêm địa chỉ mới...">
                    <option value="">2 Đ. Nguyễn Đình Chiểu, Vĩnh Thọ, Nha Trang</option>
                    <option value="">Địa chỉ đã lưu trữ</option>
                </select>
                <input class="border p-2 rounded-[8px] outline-blue-600"
                       type="text" value="@Model.Ten" name="Ten" required>
                <input class="border p-2 rounded-[8px] outline-blue-600"
                       type="text" placeholder="Điện thoại" value="@Model.Sdt" name="DienTHoai" required>
                <input class="border p-2 rounded-[8px] outline-blue-600"
                       type="text" placeholder="Địa chỉ" value="@Model.DiaChi" name="DiaChi" required>
                <div class="w-full flex gap-2">
                    @*<select
                            class="border p-2 rounded-[8px] w-1/2 outline-blue-600"
                            name="" id="">
                            <option value="">Chọn tỉnh thành</option>
                            <option value="Hồ Chí Minh">Hồ Chí Minh</option>
                            <option value="Hà Nội">Hà Nội</option>
                            <option value="Khánh Hòa">Khánh Hòa</option>
                        </select>
                        <select
                            class="border p-2 rounded-[8px] flex-1 outline-blue-600"
                            name="" id="">
                            <option value="">Chọn quận huyện</option>
                            <option value="">Hồ Chí Minh</option>
                            <option value="">Hà Nội</option>
                            <option value="">Khánh Hòa</option>
                        </select>*@
                </div>
                <div class="flex items-center justify-between mt-[20px] border-b pb-[40px]">
                    <input type="hidden" name="GhiChuDonHang" value="@ViewBag.GhiChuDonHang" />
                    <a class="text-blue-600" href="/giohang_63130599">Giỏ hàng</a>
                    <button class="p-3 text-white font-semibold bg-blue-600 rounded-[8px]">
                        Tiếp
                        tục tới phương thức thanh
                        toán
                    </button>
                </div>
            </form>
        </div>

        <!-- check before checkout -->
        <div class="px-[60px] pr-[160px] border-l py-[60px] bg-gray-100">
            <!-- List product -->
            <div class="flex flex-col gap-4 border-b pb-4 ">
                <!-- product -->
                @foreach (var item in ViewBag.dsSP)
                {
                   <div class="flex items-center gap-4 justify-between">
                        <img class="w-[70px] h-[70px] object-cover border rounded-[8px]" src="@item.SanPham.Anh"
                             alt="Product" />

                        <div class="">
                            <p class="font-medium text-[14px]">
                                @item.SanPham.TenSP
                            </p>
                            <span class="text-[12px] text-gray-400">
                                Đen /
                                18
                                Tháng
                            </span>
                        </div>
                        <div class="flex flex-col items-center text-right">
                            <p>@string.Format("{0:#,0}", item.SanPham.Gia)₫</p>
                            <p>x @item.SoLuong</p>
                            <p>@string.Format("{0:#,0}", item.Gia)₫</p>
                        </div>
                        </div>
               }



                    </div>
                    <div class="py-4 flex  gap-4 border-b">
                        <input class="flex-1 border px-2 py-3 rounded-[4px] outline-blue-600"
                               type="text" placeholder="Mã giảm giá">
                        <button class="px-3 py-1 bg-gray-400 text-white rounded-[4px]">
                            Áp
                            dụng
                        </button>
                    </div>
                    <div class="py-4 flex flex-col gap-4 border-b">
                        <p class="flex items-center justify-between">
                            Tạm tính
                            <span class="font-medium">@string.Format("{0:#,0}", ViewBag.Tong)₫</span>
                        </p>
                        <p class="flex items-center justify-between">
                            Phí giao hàng
                            <span class="font-medium">-</span>
                        </p>
                    </div>

                    <p class="flex items-center justify-between">
                        Tổng tiền
                        <span class="text-gray-500 text-[12px]">VND <strong class="text-[24px] text-black">@string.Format("{0:#,0}", ViewBag.Tong)₫</strong></span>
                    </p>
                </div>
    </div>
</body>

</html>

