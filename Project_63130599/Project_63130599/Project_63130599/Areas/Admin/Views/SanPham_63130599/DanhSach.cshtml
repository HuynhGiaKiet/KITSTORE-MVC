@model IEnumerable<Project_63130599.Models.SanPham>

    @{
        ViewBag.Title = "KITSTORE | Sản Phẩm";
        Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    }


    <div class="w-full h-screen overflow-x-hidden border-t flex flex-col">
        <div class="mt-12 mx-4">
            <p class="text-xl pb-3 flex items-center ml-3">
                <i class="fas fa-list mr-3"></i> Sản phẩm
            </p>
            <div class="bg-white ">
                <table class="leading-normal">
                    <thead>
                        <tr>
                            <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                ID
                            </th>
                            <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                Tên sản phẩm
                            </th>
                            <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                Giá
                            </th>
                            <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                Số lượng
                            </th>
                            <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                Danh mục
                            </th>
                            <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                Ngày nhập
                            </th>
                            <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                Mô tả
                            </th>
                            <th colspan="2" class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                Chức năng
                            </th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                                    <p class="text-gray-900 whitespace-no-wrap">
                                           #@item.Id
                                    </p>
                                </td>
                                <td class="w-1/5  px-5 py-5 border-b border-gray-200 bg-white text-sm">
                                    <div class="flex items-center">
                                        <div class="flex-shrink-0 w-10 h-10">
                                           

                                            <img class="w-full h-full rounded-full"
                                                 src="@item.Anh"
                                                 alt="Product" />
                                        </div>
                                        <div class="ml-3">
                                            <p class="text-gray-900 whitespace-no-wrap">
                                                @item.TenSP
                                            </p>
                                        </div>
                                    </div>
                                </td>
                                <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                                    <span class="relative inline-block px-3 py-1 font-semibold text-green-900 leading-tight">
                                        <span class="absolute inset-0 bg-green-200 opacity-50 rounded-full"></span>
                                        <span class="relative">
                                            @string.Format("{0:#,0}", item.Gia)

                                        </span>
                                    </span>
                                </td>

                                <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                                    <p class="text-gray-900 whitespace-no-wrap @(item.SoLuong <= 20? "text-red-600 font-bold": null)">
                                        @(item.SoLuong)
                                    </p>
                                    <a class="text-red-600" href="/Admin/sanpham_63130599/CapNhat/@item.Id">
                                        @(item.SoLuong <= 0? "Nhập thêm sản phẩm" : null)
                                    </a>
                                </td>

                                <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                                    <p class="text-gray-900 whitespace-no-wrap">
                                        @item.DanhMuc.Ten
                                    </p>
                                </td>
                                <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                                    <p class="text-gray-900 whitespace-no-wrap">
                                        @item.NgayNhap.Value.ToShortDateString()
                                    </p>
                                </td>
                                <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                                    <p class="text-gray-900 whitespace-no-wrap">
                                        @item.MoTa
                                    </p>
                                </td>
                                <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                                    <a class="cursor-pointer text-gray-900 whitespace-no-wrap" href="@Url.Action("CapNhat","sanpham_63130599", new { id = item.Id })">
                                        Chỉnh sửa
                                    </a>
                                </td>
                                <td class="px-5 py-5 border-b border-gray-200 bg-white text-sm">
                                    <a class="cursor-pointer  text-gray-900 whitespace-no-wrap" href="@Url.Action("Xoa","sanpham_63130599", new { id = item.Id })">
                                        Xóa
                                    </a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <p class="pt-3 text-gray-600">
            </p>
        </div>

    </div>

